{
  "name": "protoc-gen-validate-zod",
  "version": "0.0.2",
  "author": "Sebastian Lorenz <fubhy@fubhy.com>",
  "license": "Apache-2.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/fubhy/protobuf-zod.git",
    "directory": "packages/protoc-gen-validate-zod"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist/**",
    "bin/protoc-gen-validate-zod.js"
  ],
  "bin": {
    "protoc-gen-validate-zod": "bin/protoc-gen-validate-zod.js"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "codegen": "buf generate https://github.com/bufbuild/protoc-gen-validate.git --path=tests/harness/cases && buf generate https://github.com/bufbuild/protoc-gen-validate.git#subdir=validate --template=buf.gen.validate.yaml",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint \"{src,tests,bin}/**/*.ts\" --cache",
    "format": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^0.2.1",
    "@bufbuild/protoplugin": "^0.2.1"
  },
  "devDependencies": {
    "@bufbuild/protobuf": "^0.2.1",
    "@bufbuild/protoc-gen-es": "^0.2.1",
    "@vitest/ui": "^0.24.5",
    "protobuf-zod": "workspace:*",
    "ts-node": "^10.9.1",
    "vite": "^3.2.2",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.24.4",
    "zod": "^3.19.1"
  }
}
